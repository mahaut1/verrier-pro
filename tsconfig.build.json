{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",            
    "rootDir": ".",              
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "isolatedModules": false
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "server/test/**",
    "client/**",
    "jest.config.cjs",
    "**/vite.config.*",
    "**/vitest.config.*"
  ]
}
